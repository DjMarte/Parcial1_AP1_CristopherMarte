@page "/Detailsmetas"
@inject MetaService metaService
@rendermode InteractiveServer
@inject NavigationManager navigation


<PageTitle>Detalle Meta</PageTitle>
<div class="container">
	<!--Header-->
	<div class="card-header">
		<h3><strong> Detalles de Metas</strong></h3>
		<button type="button" class="btn btn-primary" @onclick="IrACrear"><i class="bi bi-plus-circle" /> Crear</button>
		<button type="button" class="btn btn-secondary btn-back" @onclick="Volver"><i class="bi bi-box-arrow-left"></i> Volver</button>

	</div>
	<!--Body-->
	<div class="card-body">
		@if (metas.Count == 0) {
			<p><em><strong>Cargando...</strong></em></p>
		}
		else {
			<table class="table">
				<thead>
					<tr>
						<th>Meta Id</th>
						<th>Fecha</th>
						<th>Descripci&oacute;n</th>
						<th>Monto</th>
						<th>Editar</th>
						<th>Eliminar</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var meta in metas) {
						<tr>
							<td>@meta.MetaId</td>
							<td>@meta.Fecha.ToShortDateString()</td>
							<td>@meta.Descripcion</td>
							<td>@meta.Monto</td>
							<td><a href="/Editmetas/MetaId=@meta.MetaId"><i class="bi bi-pencil-square"></i></a></td>
							<td><a href="/Deletemetas/MetaId=@meta.MetaId"><i class="bi bi-trash"></i></a></td>
						</tr>
					}
				</tbody>
			</table>
		}
	</div>
	<!--Footer-->
	<div class="card-footer">
		<div class="row">
			<div class="col-md-7">
				<strong>Cantidad de Metas: @metas.Count()</strong>	
			</div>
			<div class="col-3">
				<strong>Monto Total: @montoTotal</strong>
			</div>
		</div>
	</div>
</div>

@code {
	public List<Metas> metas = new List<Metas>();
	public decimal montoTotal { get; set; }

	protected override async Task OnInitializedAsync() {
		await Task.Delay(700);
		metas = metaService.ObtenerLista(m => m.MetaId > 0);
		montoTotal = metas.Sum(m => m.Monto);
	}
	public void IrACrear() {
		navigation.NavigateTo("/Createmetas");
	}
	public void Volver() {
		navigation.NavigateTo("/metas");
	}
}
